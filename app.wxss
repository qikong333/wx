/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  justify-content: center;
  box-sizing: border-box;
} 

page {
    color: #333;
    background-color: #fff;
    box-sizing: border-box;
}

.hidden{
    display: none;
}

.fl {
    float:left;
}
.fr {
    float:right;
}

.bd {
  font-weight: bold
}
.red {
    color: #fa474c;
}

.pink{
   color:#ff5500;
}

.grey{
  color:#999;
}

.button-b{
    width:690rpx;
    height: 95rpx;
    line-height: 95rpx;
    color:#fff;
    background: #29aff6;
    font-size:32rpx;
    border-radius: 50rpx;
}

.button-s{
    width:250rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin:0 auto;
    color:#fff;
    background: #29aff6;
    font-size:32rpx;
    border-radius: 50rpx;
}

button[disabled]{
    color:#fff!important;
    background: #29aff6!important;
    opacity: 0.5;
}

.arrow:after{
    content: '';
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    margin-left:20rpx;
    margin-right:5rpx;
    border-top: 4rpx solid #999;
    border-right: 4rpx solid #999;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
}

.pop-bg{
    position: fixed;
    left:0;
    right:0;
    top:0;
    bottom:0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 10
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

button::after{
  border:none;
}
