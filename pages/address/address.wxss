/* pages/address/address.wxss */
.Address-Info{
  position: absolute;
  top:0;
  bottom:155rpx;
  left:0;
  right:0;
}
.address-list{
    width:690rpx;
    padding:0 30rpx;
    overflow: hidden;
}

.address-list-l{
    width:620rpx;
    height:160rpx;
    padding:30rpx 0;
    border-bottom:#ccc 2rpx solid;
    float:left;
    position: relative;
}

.address-list-l icon{
    position: absolute;
    left:0;
    top:50%;
    transform: translateY(-50%);
}

.address-list-l>view{
    display: flex;
    align-items: center;
    height:80rpx;
    padding-left: 80rpx;
}

.address-list-l .list-name{
    max-width: 300rpx;
    font-size: 32rpx;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.address-list-l .list-phone{
    margin-left:20rpx;
    font-size: 30rpx;
    font-weight: bold;
}

.address-list-l .list-mark{
    padding:4rpx 20rpx;
    color:#fff;
    background: #ff5600;
    font-size: 28rpx;
    border-radius: 50rpx;
}

.address-list-l .list-address{
    float:right;
    width:420rpx;
    margin-left:20rpx;
    color:#999;
    font-size: 28rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.address-list-r{
    width:40rpx;
    height:160rpx;
    padding:30rpx;
    padding-right:0;
    float: right;
    position: relative;
}

.address-list-r image{
    width:40rpx;
    height:40rpx;
    position: absolute;
    right:0;
    top:50%;
    transform: translateY(-50%);
}

.Address-Ybtn{
    padding:30rpx;
    position: absolute;
    bottom:0;
}

.Address-None image{
    display: block;
    width:280rpx;
    height:200rpx;
    margin:300rpx auto 30rpx;
}

.Address-None text{
    display: block;
    text-align: center;
    color:#999;
    font-size: 30rpx;
}

.Address-Nbtn{
    padding:50rpx;
}