/* pages/cart/cart.wxss */

.Cart-Info {
  padding-bottom: 100rpx;
}

.cart-list {
  background: #fff;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
}

.cart-list>icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.cart-list .list-image {
  width: 150rpx;
  height: 150rpx;
  margin-left: 70rpx;
  margin-right: 20rpx;
  float: left;
}

.cart-list>text {
  float: left;
}

.cart-list .list-name {
  width: 450rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cart-list .list-size {
  width: 320rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cart-list .list-price {
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #f50;
}

.cart-list .list-num image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
}

.cart-list .list-num .sub {
  bottom: 40rpx;
  right: 160rpx;
}

.cart-list .list-num .add {
  bottom: 40rpx;
  right: 30rpx;
}

.cart-list .list-num .num {
  width: 60rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 32rpx;
  position: absolute;
  bottom: 40rpx;
  right: 90rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 100rpx;
  background: #fff;
  box-sizing: border-box;
}

.bottom .bottom-check {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.bottom-check .icon {
  margin-right: 10rpx;
}

.bottom-check .text {
  font-size: 32rpx;
}

.bottom .bottom-cart {
  display: flex;
  align-items: center;
  flex: 1;
}

.bottom-cart .cart-sum {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 30rpx;
}

.cart-sum .price {
  font-size: 32rpx;
  font-weight: bold;
}

.cart-sum .price .sum {
  margin: 0 15rpx;
  color: #fa474c;
}

.cart-sum .tip {
  color: #999;
  font-size: 24rpx;
}

.bottom-cart button {
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  padding: 0 40rpx;
}

.bottom-cart .cart-edit {
  border-radius: 0;
  background: #3fd884;
}

.bottom-cart .cart-btn {
  border-radius: 0;
  background: #29aff6;
}

.bottom .bottom-delete {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #999;
  font-size: 32rpx;
}

.bottom-delete icon {
  margin-right: 10rpx;
}

.bottom-delete>view {
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-empty {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 30rpx;
  left: 95rpx;

}