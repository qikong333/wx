.Search-Option{
    height:80rpx;
    padding:30rpx;
    background: #fff;
    position: relative;
}

.Search-Option .search-box{
    height:40rpx;
    min-height:40rpx;
    line-height:40rpx;
    padding:20rpx;
    padding-left:80rpx;
    background:#f5f5f5;
    font-size:30rpx;
    border-radius:60rpx;
}

.Search-Option label{
    position: absolute;
    top:50rpx;
    z-index: 2;
}

.Search-Option .search{
    left:30px;
}

.Search-Option .clear{
    right:30px;
}

.Search-Record{
    padding:30rpx;
}

.Search-Record text{
    display: block;
    color:#999;
    font-size: 30rpx;
    margin-bottom:10rpx;
}

.Search-Record view{
    display: inline-block;
    padding:10rpx 30rpx;
    margin:15rpx 20rpx 15rpx 0;
    background: #f5f5f5;
    border-radius: 50rpx;
    font-size: 30rpx;
}

.Search-Info{
  padding:140rpx 0 120rpx;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}

.search-con{
    padding:30rpx;
    position: relative;
    overflow: hidden;
}

.search-con .con-empty{
    width:150rpx;
    height:150rpx;
    position: absolute;
    top:30rpx;
    left:30rpx;   
}

.search-con .con-image{
    width:150rpx;
    height:150rpx;
    margin-right:20rpx;
    float:left;
}

.search-con>text{
    float:left;
}

.search-con .con-name{
    width:520rpx;
    height:50rpx;
    line-height: 50rpx;
    font-size:32rpx;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.search-con .con-size{
    width:520rpx;
    height:40rpx;
    line-height: 40rpx;
    font-size:24rpx;
    color:#666;
}

.search-con .con-price{
    width:520rpx;
    height:60rpx;
    line-height: 60rpx;
    font-size:32rpx;
    font-weight: bold;
    color:#ff5500;
}

.search-con .con-num image{
    width:50rpx;
    height:50rpx;
    position: absolute;
}

.search-con .con-num .sub{
    bottom:40rpx;
    right:160rpx;
}

.search-con .con-num .add{
    bottom:40rpx;
    right:30rpx;
}

.search-con .con-num .num{
    width:60rpx;
    height:45rpx;
    line-height: 45rpx;
    text-align: center;
    font-size: 32rpx;
    position: absolute;
    bottom:40rpx;
    right:90rpx;
}

.search-none image{
    display: block;
    width:280rpx;
    height:200rpx;
    margin:300rpx auto 30rpx;
}

.search-none text{
    display: block;
    text-align: center;
    color:#999;
    font-size: 30rpx;
}

.Search-Deta .deta-prod{
  background: #fff;
  border-radius: 20rpx;
  position: absolute;
  top:50rpx;
  left:50rpx;
  right:50rpx;
  bottom:120rpx;
}

.deta-prod .prod-mess{
  padding:30rpx;
  overflow: hidden;
  position: relative;
}

.deta-prod .prod-mess label{
  width:30rpx;
  height:30rpx;
  position: absolute;
  top:30rpx;
  right:60rpx;
}

.deta-prod .prod-mess .mess-image{
  width:490rpx;
  height:490rpx;
  margin:0 50rpx;
}

.deta-prod .prod-mess>text{
  float:left;
}

.deta-prod .prod-mess .mess-name{
  width:590rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size:40rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.deta-prod .prod-mess .mess-size{
  width:590rpx;
  height:50rpx;
  line-height: 50rpx;
  font-size:30rpx;
  color:#666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.deta-prod .prod-mess .mess-price{
  width:590rpx;
  height:70rpx;
  line-height: 70rpx;
  font-size:40rpx;
  font-weight: bold;
  color:#ff5500;
}

.deta-prod .prod-mess .mess-num image{
  width:50rpx;
  height:50rpx;
  position: absolute;
}

.deta-prod .prod-mess .mess-num .sub{
  bottom:40rpx;
  right:130rpx;
}

.deta-prod .prod-mess .mess-num .add{
  bottom:40rpx;
  right:30rpx;
}

.deta-prod .prod-mess .mess-num .num{
  width:60rpx;
  height:45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 32rpx;
  position: absolute;
  bottom:40rpx;
  right:70rpx;
}

.deta-prod .prod-info{
  width:590rpx;
  padding:30rpx;
  position: absolute;
  top:740rpx;
  bottom:0;
  left:0;
  right:0;
}

.deta-prod .prod-info>text{
  font-size: 32rpx;
  font-weight: bold;
}

.deta-prod .prod-info .info-pro{
  padding-left:30rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.deta-prod .prod-info .info-pro rich-text{
  display: block;
  margin:15rpx 0;
  font-weight: bold;
  position: relative;
}

.deta-prod .prod-info .info-pro rich-text::before{
  content:'';
  display: inline-block;
  width:8rpx;
  height:30rpx;
  background: #29aff6;
  position: absolute;
  top:12rpx;
  left:-30rpx;
}

.deta-prod .prod-info .info-pro>text{
  display: block;
  width:560rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.deta-prod .prod-info .info-pro>text .blue{
  color:#29aff6;
}

.Search-Pack{
    width:710rpx;
    height:100rpx;
    padding:10rpx 20rpx;
    background: #fff;
    font-weight: bold;
    position: fixed;
    left:0;
    bottom:0;
    box-shadow: 0 0 30rpx #eee;
    z-index: 1
}

.Search-Pack .pack-image{
    width:90rpx;
    height:90rpx;
    margin:5rpx;
    vertical-align: middle;
}

.Search-Pack .pack-num{
    display: inline-block;
    width:50rpx;
    text-align: center;
    color:#fff;
    font-size: 30rpx;
    position: absolute;
    top:40rpx;
    left:45rpx;
}

.Search-Pack .pack-sum{
    margin:0 20rpx;
    font-size: 36rpx;
}

.Search-Pack .pack-sum .sum{
    margin:0 15rpx;
    color:#fa474c;
}

.Search-Pack button{
    position: absolute;
    top:10rpx;
    right:20rpx;
    line-height: 100rpx;
    padding:0 30rpx;
    color:#ff5500;
    background: #fff;
    font-size: 40rpx;
}

.Search-Pack button text::before {  
  content: '';
  display: inline-block;
  width:8rpx;
  height:40rpx;
  margin-right: 30rpx;
  border-left: #999 4rpx solid;  
  transform: translateY(20%);
}   

.Search-Pack button::after {  
  border: 0;  
}   