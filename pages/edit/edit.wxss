.Edit-Info rich-text .edit-opt {
  display: inline-block;
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  margin-right: 30rpx;
  background: #fff;
  font-size: 26rpx;
  border: #e6e6e6 2rpx solid;
  border-radius: 50rpx;
}

.Edit-Info rich-text .edit-opt.active {
  color: #fff;
  background: #29aff6;
  border: #29aff6 2rpx solid;
}

.Edit-Info rich-text .picker {
  line-height: 60rpx;
}

