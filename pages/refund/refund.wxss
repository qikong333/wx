/* pages/refund/refund.wxss */
.Refund-Main{
  padding:30rpx 0;
  text-align: center;
  border-bottom:#f5f5f5 30rpx solid;
}

.Refund-Main view{
  font-size: 48rpx;
  font-weight: bold;
  margin:20rpx 0;
}

.Refund-Main rich-text{
  font-size: 48rpx;
  color:#ff5600;
}

.Refund-Main text{
  display: block;
  font-size: 30rpx;
}

.Refund-Main form{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;  
  margin:20rpx 0;
  padding:0 20rpx 0 60rpx;
  color:#999;
  background: #f5f5f5;
  font-size: 30rpx;
  border-radius: 50rpx;
  position: relative
}

.Refund-Main form icon{
  width:36rpx;
  height:36rpx;
  position: absolute;
  top:12rpx;
  left:12rpx;
}

.Refund-Deta{
  padding:30rpx;
}

.Refund-Deta rich-text{
  text-align: center;
}

.refund-flow{
  overflow: hidden;
}

.refund-flow .flow-info{
  width:25%;
  padding:60rpx 0;
  text-align: center;
  float:left;
  position: relative;
}

.refund-flow .flow-info label{
  display: block;
}

.refund-flow .flow-info text{
  line-height: 40rpx;
  font-size: 30rpx;
}

.refund-flow .flow-info:not(:first-of-type)::before{
  content: '';
  display: inline-block;
  width:80rpx;
  height:5rpx;
  background: #333;
  position: absolute;
  left:-40rpx;
  top:90rpx;
}

.refund-list .list-info{
  padding-top:50rpx;
  font-size: 32rpx;
  overflow: hidden;
}

.refund-list .list-info text{
  float:left;
}

.refund-list .list-info form{
  float:right;
}