/* pages/order/order.wxss */
.Order-Menu {
  width: 690rpx;
  height: 100rpx;
  padding: 0 30rpx;
}

.Order-Menu .menu-list {
  float: left;
  width: 20%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  position: relative;
}

.Order-Menu .menu-list.active {
  font-size: 32rpx;
  color: #29aff6;
}

.Order-Menu .menu-list.active:after {
  content: "";
  display: inline-block;
  width: 100%;
  height: 8rpx;
  background: #29aff6;
  border-radius: 20rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.Order-Info {
  background: #f4f6f9;
  width: 690rpx;
  padding: 0 30rpx;
  position: absolute;
  top: 120rpx;
  left: 0;
  right: 0;
  bottom: 0;
}

.Order-Info .info-list {
  padding: 15rpx 0;
  border-bottom: #eee 2rpx solid;
}

.Order-Info .info-list .list-pro {
  padding: 15rpx 0;
  font-size: 30rpx;
  overflow: hidden;
}

.Order-Info .info-list .list-pro:first-child {
  font-weight: bold;
}

.Order-Info .info-list .list-pro .sum {
  margin: 0 15rpx;
  font-size: 32rpx;
}

.Order-Info .info-list .list-pro .state {
  font-weight: bold;
}

.Order-Info .info-list .list-pro .state.active {
  color: #ff5600;
}

.Order-Info .info-list .list-pro image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.Order-Info .info-list .list-pro .num {
  line-height: 80rpx;
}

.Order-Info .info-list .list-pro button {
  width: 150rpx;
  height: 60rpx;
  line-height: 56rpx;
  margin-left: 20rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 24rpx;
  background: #fff;
  border: #e6e6e6 2rpx solid;
  border-radius: 50rpx;
}

.Order-Info .info-list .list-pro button.active {
  color: #fff;
  background: #29aff6;
  border: #29aff6 2rpx solid;
}

.Order-Info .info-list .list-pro button::after {
  border: 0;
}

.Order-Info .info-tips {
  margin: 30rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.Order-Info .info-none image {
  display: block;
  width: 280rpx;
  height: 200rpx;
  margin: 300rpx auto 30rpx;
}

.Order-Info .info-none text {
  display: block;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}

.Order-Code form {
  display: block;
  width: 650rpx;
  margin: auto;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
  position: relative;
  top: 350rpx;
}

.Order-Code form text {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  font-size: 32rpx;
}

.Order-Code form label {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  padding-bottom: 30rpx;
  border-bottom: #eee 1rpx solid;
  font-size: 52rpx;
  font-weight: bold;
}

.Order-Code form canvas {
  width: 550rpx;
  height: 150rpx;
  margin: 0 50rpx;
}

.Order-Code form button {
  background: #fff;
  color: #00c200;
}

.Order-None image {
  display: block;
  width: 280rpx;
  height: 200rpx;
  margin: 300rpx auto 30rpx;
}

.Order-None text {
  display: block;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}

.Order-None navigator {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 80rpx auto;
  text-align: center;
  font-size: 32rpx;
  border: #ccc 4rpx solid;
  border-radius: 50rpx;
}

.orderList {
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 18rpx;
  display: block;
  margin-top: 30rpx;
}

.orderList .box1 {
  display: flex;
  padding-bottom: 10rpx;
}

.orderList .box1 .box1L .img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.orderList .box1 .box1L {
  font-size: 30rpx;
  color: #2e3133;
  width: 50%;
  float: left;
}

.orderList .box1 .box1R {
  text-align: right;
  font-size: 28rpx;
  color: #a2a6a8;
  width: 50%;
  float: left;
}

.orderList .box2 .img {
  width: 150rpx;
  height: 150rpx;
}

.orderList .box2 .img2 {
  width: 36rpx;
  height: 36rpx;
  display: block;
  margin: 16rpx auto;
}

.orderList .box2 .box21 {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  float: left;
}

.orderList .box2 .box22 {
  padding-top: 60rpx;
  font-size: 26rpx;
  color: #000000;
  height: 150rpx;
  float: left;
  width: 190rpx;
  text-align: center;
}

.orderList .box2 .box21 .text {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 20rpx;
  background-color: #000000;
  border-radius: 10rpx;
  opacity: 0.5;
  color: #ffffff;
  position: absolute;
  right: -5rpx;
  bottom: -5rpx;
}

.orderList .box3 {
  text-align: right;
  font-size: 26rpx;
  color: #2e3133;
  padding-bottom: 30rpx;
}

.orderList .box3 text {
  font-size: 30rpx;
  color: #ff5733;
}

.orderList .box4 {
  border-top: 1rpx solid #dde0e4;
  font-size: 30rpx;
  display: table;
  color: #ff5733;
  width: 100%;
  height: 76rpx;
}

.orderList .box4 .fr {
  margin-right: 20rpx;
  height: 58rpx;
  border-radius: 10rpx;
  border: solid 1rpx #00a3ff;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #00a3ff;
  text-align: center;
  margin-top: 20rpx;
}

.orderList .box4 .active {
  background-color: #008fe0;
  color: #fff;
}